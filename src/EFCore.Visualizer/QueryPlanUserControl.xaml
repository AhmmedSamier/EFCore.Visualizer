<UserControl
    x:Class="EFCore.Visualizer.QueryPlanUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    <UserControl.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="FontAwesomeBrands">pack://application:,,,/EFCore.Visualizer;component/Fonts/#Font Awesome 6 Brands Regular</FontFamily>
            <FontFamily x:Key="FontAwesome">pack://application:,,,/EFCore.Visualizer;component/Fonts/#Font Awesome 6 Free Solid</FontFamily>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBarPanel Grid.Row="0" Margin="0,0,0,2">
            <ToolBar>
                <CheckBox x:Name="AnalyzeCheckBox" Content="Explain Analyze" Margin="5,0,0,0"
                          Checked="OnAnalyzeChanged" Unchecked="OnAnalyzeChanged" />
            </ToolBar>
        </ToolBarPanel>

        <wv2:WebView2 Grid.Row="1" Name="webView" NavigationCompleted="WebViewNavigationCompleted" />
    </Grid>
</UserControl>

